
define onTrue(x) := filter(changeOf(x), x)

define tracePoint(x) := filter(tracePointID, eq(mrv(tracePointID, 0), constantSignal(x)))

define callQS := tracePoint(17) -- call to quick_sort()
define repeat := tracePoint(45) -- start new iteration round

-- We implemented quicksort, so we shouldn't need more n*(n-1)/2 recursive calls.
define calls := eventCount(callQS, repeat)
define error := onTrue(gt(calls, constantSignal(div(mul(20,19),2))))