in x: Events[Int]
in y: Events[Int]

def s1 := if true then merge(a,b) else merge(a,b) where {
  def a := filterConst("a", x > 5)
  def b := filterConst_("b", y > 3)
}

def s2 := {
  def a := filterConst("a", x > 5)
  def b := filterConst_("b", y > 3)
  return merge(a,b)
}

def s3 := {
  def a := filterConst("a", x > 5)
